<script>
  const modal = document.getElementById('modal-container');
  const giftModal = document.getElementById('gift-modal');
  const giftClose = document.getElementById('gift-close');
  const giftOkBtn = document.getElementById('gift-ok');

  const questions = [
    {
      text: "üöó –ö–∞–∫—É—é –º–∞—à–∏–Ω—É –≤ –∞—Ä–µ–Ω–¥—É –≤—ã –ø—Ä–µ–¥–ø–æ—á–∏—Ç–∞–µ—Ç–µ?",
      icons: [
        "https://cdn-icons-png.flaticon.com/512/743/743131.png",
        "https://cdn-icons-png.flaticon.com/512/1046/1046857.png"
      ],
      answers: [
        "–°–∞–º—É—é –¥–µ—à—ë–≤—É—é –∏ –ø—Ä–æ—Å—Ç—É—é",
        "–û–ø—Ç–∏–º–∞–ª—å–Ω–æ–µ —Å–æ–æ—Ç–Ω–æ—à–µ–Ω–∏–µ —Ü–µ–Ω—ã –∏ –∫–∞—á–µ—Å—Ç–≤–∞",
        "–°–∞–º—É—é —É–¥–æ–±–Ω—É—é –∏ –Ω–æ–≤—É—é"
      ]
    },
    {
      text: "üí∞ –ö–∞–∫ –≤—ã –æ—Ü–µ–Ω–∏–≤–∞–µ—Ç–µ —Å–≤–æ—ë —Ç–µ–∫—É—â–µ–µ —Ñ–∏–Ω–∞–Ω—Å–æ–≤–æ–µ –ø–æ–ª–æ–∂–µ–Ω–∏–µ?",
      icons: [
        "https://cdn-icons-png.flaticon.com/512/159/159604.png"
      ],
      answers: [
        "–û—á–µ–Ω—å —Å—Ç–∞–±–∏–ª—å–Ω–æ–µ",
        "–°—Ä–µ–¥–Ω–µ–µ, –Ω–æ —Å–ø—Ä–∞–≤–ª—è—é—Å—å",
        "–ù–µ—É—Å—Ç–æ–π—á–∏–≤–æ–µ, —á–∞—Å—Ç–æ –ø–µ—Ä–µ–∂–∏–≤–∞—é"
      ]
    },
    {
      text: "‚ùì –ß—Ç–æ –≤–∞—Å –±–æ–ª—å—à–µ –≤—Å–µ–≥–æ –±–µ—Å–ø–æ–∫–æ–∏—Ç –ø—Ä–∏ –∞—Ä–µ–Ω–¥–µ?",
      icons: [
        "https://cdn-icons-png.flaticon.com/512/565/565547.png",
        "https://cdn-icons-png.flaticon.com/512/847/847969.png"
      ],
      answers: [
        "–°–∫—Ä—ã—Ç—ã–µ –ø–ª–∞—Ç–µ–∂–∏ –∏ –¥–æ–ø. –∫–æ–º–∏—Å—Å–∏–∏",
        "–£–¥–æ–±—Å—Ç–≤–æ –∏ –ø—Ä–æ—Å—Ç–æ—Ç–∞ —Å–µ—Ä–≤–∏—Å–∞",
        "–ö–∞—á–µ—Å—Ç–≤–æ –∏ —Å–æ—Å—Ç–æ—è–Ω–∏–µ –∞–≤—Ç–æ–º–æ–±–∏–ª—è"
      ]
    },
    {
      text: "üîÑ –ö–∞–∫ —á–∞—Å—Ç–æ –≤—ã –∏—Å–ø–æ–ª—å–∑—É–µ—Ç–µ —à–µ—Ä–∏–Ω–≥-—Å–µ—Ä–≤–∏—Å—ã?",
      icons: [
        "https://cdn-icons-png.flaticon.com/512/482/482583.png"
      ],
      answers: [
        "–ö–∞–∂–¥—ã–π –¥–µ–Ω—å",
        "–ù–µ—Å–∫–æ–ª—å–∫–æ —Ä–∞–∑ –≤ –º–µ—Å—è—Ü",
        "–†–µ–¥–∫–æ –∏–ª–∏ –≤–ø–µ—Ä–≤—ã–µ"
      ]
    },
    {
      text: "üå± –ù–∞—Å–∫–æ–ª—å–∫–æ –¥–ª—è –≤–∞—Å –≤–∞–∂–Ω–∞ —ç–∫–æ–ª–æ–≥–∏—á–Ω–æ—Å—Ç—å —Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç–∞?",
      icons: [
        "https://cdn-icons-png.flaticon.com/512/616/616408.png"
      ],
      answers: [
        "–û—á–µ–Ω—å –≤–∞–∂–Ω–∞ ‚Äî –≤—ã–±–∏—Ä–∞—é —ç–ª–µ–∫—Ç—Ä–æ–∫–∞—Ä—ã",
        "–ò–Ω–æ–≥–¥–∞ –æ–±—Ä–∞—â–∞—é –≤–Ω–∏–º–∞–Ω–∏–µ",
        "–ù–µ –∑–∞–¥—É–º—ã–≤–∞—é—Å—å"
      ]
    }
  ];

  let currentQuestionIndex = -1;
  let answers = [];

  function renderWelcome() {
    modal.style.display = 'block';
    giftModal.style.display = 'none';

    modal.innerHTML = `
      <h2>–ü—Ä–∏–≤–µ—Ç!</h2>
      <p>–ü—Ä–æ–π–¥–∏ –Ω–µ–±–æ–ª—å—à–æ–π –æ–ø—Ä–æ—Å –∏ –ø–æ–ª—É—á–∏ –ø–æ–¥–∞—Ä–æ–∫ üéÅ</p>
      <button class="btn-primary" id="start-btn">–ü–æ–µ—Ö–∞–ª–∏!</button>
    `;

    document.getElementById('start-btn').onclick = () => {
      currentQuestionIndex = 0;
      renderQuestion();
    };
  }

  function renderQuestion() {
    if (currentQuestionIndex >= questions.length) {
      showGift();
      return;
    }
    const q = questions[currentQuestionIndex];

    let iconsHtml = '';
    q.icons.forEach(src => {
      iconsHtml += `<img src="${src}" alt="–∏–∫–æ–Ω–∫–∞" loading="lazy">`;
    });

    let answersHtml = '';
    q.answers.forEach((ans, i) => {
      answersHtml += `<button class="answer-btn" data-index="${i}">${ans}</button>`;
    });

    modal.innerHTML = `
      <div id="question-text">${q.text}</div>
      <div id="icon-row">${iconsHtml}</div>
      <div id="answers">${answersHtml}</div>
      <button id="next-btn">–î–∞–ª–µ–µ</button>
    `;

    const answerButtons = modal.querySelectorAll('.answer-btn');
    const nextBtn = modal.querySelector('#next-btn');
    nextBtn.disabled = true;
    nextBtn.classList.remove('enabled');

    let selectedAnswerIndex = null;

    answerButtons.forEach(btn => {
      btn.onclick = () => {
        answerButtons.forEach(b => b.classList.remove('selected'));
        btn.classList.add('selected');
        selectedAnswerIndex = parseInt(btn.dataset.index, 10);
        nextBtn.classList.add('enabled');
      };
    });

    nextBtn.onclick = () => {
      if (selectedAnswerIndex === null) return;
      answers[currentQuestionIndex] = q.answers[selectedAnswerIndex];
      currentQuestionIndex++;
      renderQuestion();
    };
  }

  function showGift() {
    modal.style.display = 'none';
    giftModal.style.display = 'block';
  }

  function closeGift() {
    giftModal.style.display = 'none';
    // –í–æ–∑–≤—Ä–∞—â–∞–µ–º—Å—è –∫ —Ñ–æ–Ω–æ–≤–æ–º—É —ç–∫—Ä–∞–Ω—É ‚Äî –±–µ–∑ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
  }

  giftClose.onclick = closeGift;
  giftOkBtn.onclick = closeGift;

  renderWelcome();
</script>

</body>
